{
  "compilerOptions": {
    "strictNullChecks": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "target": "es6",
    "lib": ["dom", "es2017"]
  },
  "include": ["./components/**/*"],
  "exclude": ["node_modules", "lib", "es"]
}
